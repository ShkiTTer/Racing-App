<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ColoredButton">
        <item name="android:background">@drawable/round_view</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem
        </item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseInputField">
        <item name="android:background">@drawable/round_view</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

</resources>
